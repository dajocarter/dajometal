{{#or pagination.previous pagination.next }}
<div class="pagination">
{{#if pagination.previous }}
  <a class="paginate button" href="{{ site.url }}/{{removeIndex pagination.previous.path }}"><i class="fa fa-chevron-left"></i> <i class="fa fa-chevron-left"></i></a>
{{ else }}
  <button class="paginate button" disabled="disabled"><i class="fa fa-chevron-left"></i> <i class="fa fa-chevron-left"></i></button>
{{/if}}
  <div class="pages">
  {{#each pagination.pages }}
  
    {{#unlessCurrentPage ../path compare=pagination.num }}
      {{#if @first }}
      <a class="paginate button" href="{{ site.url }}/blog/">{{ pagination.num }}</a>
      {{else}}
      <a class="paginate button" href="{{ site.url }}/blog/{{ pagination.num }}/">{{ pagination.num }}</a>
      {{/if}}
    {{/unlessCurrentPage}}
    
    {{#ifCurrentPage ../path compare=pagination.num }}
      <button class="paginate current" disabled="disabled">{{ pagination.num }}</button>
    {{/ifCurrentPage}}
  
  {{/each}}
  </div>
{{#if pagination.next }}
  <a class="paginate button" href="{{ site.url }}/{{removeIndex pagination.next.path }}"><i class="fa fa-chevron-right"></i> <i class="fa fa-chevron-right"></i></a>
{{ else }}
  <button class="paginate button" disabled="disabled"><i class="fa fa-chevron-right"></i> <i class="fa fa-chevron-right"></i></button>
{{/if}}
</div>
{{/or}}