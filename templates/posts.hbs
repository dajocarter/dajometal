{{> header }}
    <main class="posts">
      <h1>{{ title }}</h1>
      {{#if collections.posts }}
        {{#each pagination.files }}
          <article>
            <header>
              <h2><a href="/{{ path }}">{{ title }}</a></h2>
              <p>
                <span class="date"><i class="icon icon-clock-o"></i> {{ moment published format="MMMM Do, YYYY" }}</span>
                <span class="disqus-comment-count" data-disqus-url="{{ ../site.url }}/{{ path }}"><i class="icon icon-comments"></i> </span>
              </p>
            </header>
            {{{ excerpt }}}
          </article>
        {{/each}}

        <ul class="nav pagination">
          {{#if pagination.previous }}
            <li><a href="/{{removeIndex pagination.previous.path }}"><i class="icon icon-chevron-left"></i></a></li>
          {{/if}}
          {{#each pagination.pages }}
            <li>
            {{#unlessCurrentPage ../path compare=pagination.num }}
              {{#if @first }}
              <a href="/blog/">
              {{else}}
              <a href="/blog/{{ pagination.num }}/">
              {{/if}}
            {{/unlessCurrentPage}}
              {{ pagination.num }}
            {{#unlessCurrentPage ../path compare=pagination.num }}
              </a>
            {{/unlessCurrentPage}}
            </li>
          {{/each}}
          {{#if pagination.next }}
            <li><a href="/{{removeIndex pagination.next.path }}"><i class="icon icon-chevron-right"></i></a></li>
          {{/if}}
        </ul>
      {{/if}}
    </main>
{{> footer }}