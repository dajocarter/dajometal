{{> header }}
    <main class="posts">
      <h1>{{ title }}</h1>
      {{#if collections.posts}}
        {{#each pagination.files}}
          <h2><a href="/{{ this.path }}">{{ this.title }}</a></h2>
          {{{ this.excerpt }}}
        {{/each}}

        <ul class="nav pagination">
          {{#if pagination.previous }}
            <li><a href="/{{ pagination.previous.path }}"><i class="icon icon-chevron-left"></i></a></li>
          {{/if}}
          {{#each pagination.pages }}
            <li>
              {{#if @first }}
              <a href="/blog/">
              {{else}}
              <a href="/blog/{{ pagination.index }}/">
              {{/if}}
                {{ pagination.num }}
              </a>
            </li>
          {{/each}}
          {{#if pagination.next }}
            <li><a href="/{{ pagination.next.path }}"><i class="icon icon-chevron-right"></i></a></li>
          {{/if}}
        </ul>
      {{/if}}
    </main>
{{> footer }}